<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
  <div class="well">
  <h2 class="text-center">Change Your Password</h2>
  <br />
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <div>
    <%= f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "Password"   %>
  </div>
  <br />
  <div>
    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation"    %>
  </div>
  <br />
  <div>
    <%= f.submit "Change Password", :class => "btn btn-lg btn-primary btn-block" %>
  </div>
  <br />
  <% end %>
  </div>
  </div>
  <div class="col-md-3"></div>
</div>
